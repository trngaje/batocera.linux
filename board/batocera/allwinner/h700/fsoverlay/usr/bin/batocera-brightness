#!/bin/sh

XMAX=255
XMIN=3

CYCLESTEP=20 # % additional brightbess at each step

setValue() {
    NEWVAL=$1

    test "${NEWVAL}" -lt 0         && NEWVAL=0
    test "${NEWVAL}" -gt "${XMAX}" && NEWVAL="${XMAX}"

    brightness set "${NEWVAL}"
}

cycle() {
    X=$(brightness get)
    FVALUE=$(echo "scale=3;${X}" "*" "100" / "${XMAX}" | bc)
    LC_ALL=C FVALUE=$(printf '%.*f\n' 0 "${FVALUE}") # round
    NEWVAL=$(echo "${FVALUE} + ${CYCLESTEP}" | bc)
    [ "${NEWVAL}" -gt 100 ] && NEWVAL=0
    echo "Brightness cycling to ${NEWVAL}%"
    NEWVAL=$(expr "${NEWVAL}" "*" "${XMAX}" / 100)
    setValue "${NEWVAL}" "${XMAX}"
    exit 0
}

display_off() {
    echo disable > /sys/kernel/debug/dispdbg/command
    echo lcd0 > /sys/kernel/debug/dispdbg/name
    echo 1 > /sys/kernel/debug/dispdbg/start
    exit 0
}

display_on() {
    echo enable > /sys/kernel/debug/dispdbg/command
    echo lcd0 > /sys/kernel/debug/dispdbg/name
    echo 1 > /sys/kernel/debug/dispdbg/start
    exit 0
}

# get
if test $# = 0
then
    X=$(brightness get)
    FVALUE=$(echo "scale=3;${X}" "*" "100" / "${XMAX}" | bc)
    LC_ALL=C printf '%.*f\n' 0 "${FVALUE}" # round
    exit 0
fi

# set
if test $# = 1
then
    if [ "${1}" = "cycle" ]; then
        cycle
    elif [ "${1}" = "dispoff" ]; then
        display_off
    elif [ "${1}" = "dispon" ]; then
        display_on
    else
       NEWVAL=$(expr "${1}" "*" "${XMAX}" / 100)
       setValue "${NEWVAL}" "${XMAX}"
       exit 0
    fi
fi

# set +/-
if test $# = 2
then
    X=$(brightness get)
    DELTA=$(expr "${2}" '*' ${XMAX} / 100)

    if [ "${1}" = "+" ]; then

        if [ "${X}" -eq 0 ]; then
            NEWVAL=${XMIN}
        else
            NEWVAL=$(expr "${X}" "+" "${DELTA}")
        fi

    elif [ "${1}" = "-" ]; then

        NEWVAL=$(expr "${X}" "-" "${DELTA}")

        if [ "${NEWVAL}" -le 0 ] && [ "${X}" -ne "${XMIN}" ] && [ "${X}" -ne 0 ]; then
            NEWVAL=${XMIN}
        fi
    fi

    setValue "${NEWVAL}" "${XMAX}"
    exit 0
fi

# help
echo "${0}"      >&2
echo "${0} + 10" >&2
echo "${0} - 20" >&2
echo "${0} cycle" >&2
exit 1
