BR2_TARGET_GENERIC_GETTY_BAUDRATE_115200=y
BR2_GLOBAL_PATCH_DIR="$(BR2_EXTERNAL_BATOCERA_PATH)/board/batocera/patches $(BR2_EXTERNAL_BATOCERA_PATH)/board/batocera/allwinner/patches $(BR2_EXTERNAL_BATOCERA_PATH)/board/batocera/allwinner/a133/patches $(BR2_EXTERNAL_BATOCERA_PATH)/board/batocera/allwinner/a133/trimui-smart-pro/patches"
BR2_ROOTFS_OVERLAY="$(BR2_EXTERNAL_BATOCERA_PATH)/board/batocera/fsoverlay $(BR2_EXTERNAL_BATOCERA_PATH)/board/batocera/allwinner/a133/fsoverlay $(BR2_EXTERNAL_BATOCERA_PATH)/board/batocera/allwinner/a133/trimui-smart-pro/fsoverlay"
BR2_TARGET_ROOTFS_SQUASHFS4_GZIP=y

# batocera splash screen
BR2_PACKAGE_BATOCERA_SPLASH_MPV=y

# Batocera system
BR2_PACKAGE_BATOCERA_KODI20=n

